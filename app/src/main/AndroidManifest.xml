<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faaya.moneyprojects">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_search"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_search_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyProjects">
        <activity android:name=".HoyListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.HoyActivity" />
        </activity>
        <activity android:name=".GastosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.ObrasActivity" />
        </activity>
        <activity android:name=".ListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.CalendarActivity" />
        </activity>
        <activity android:name=".HoyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.MainActivity" />
        </activity>
        <activity android:name=".CalendarActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.MainActivity" />
        </activity>
        <activity android:name=".ObrasActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.MainActivity" />
        </activity>
        <activity android:name=".ElementosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.faaya.moneyprojects.MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MoneyProjects.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>