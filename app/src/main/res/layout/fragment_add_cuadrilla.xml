<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:text="EDITAR CUADRILLA"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="nombre"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/purple_200"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextClasificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="clasificación"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/purple_200"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextCostoSemanal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="costo semanal"
            android:textColor="@color/design_default_color_primary"
            android:textColorHint="@color/purple_200"
            android:inputType="number" />

        <Switch
            android:id="@+id/switchNomina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="Nómina"
            android:textColor="@color/purple_500" />

        <Switch
            android:id="@+id/switchHide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="Desactivado"
            android:textColor="@color/purple_500" />

        <Button
            android:id="@+id/buttonAddCuadrilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="4dp"
            android:background="?attr/colorSecondary"
            android:backgroundTintMode="?attr/colorSecondary"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="AGREGAR"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_200" />

        <Button
            android:id="@+id/eliminarCuadrilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ELIMINAR"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200" />

    </LinearLayout>

</LinearLayout>